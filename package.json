{
  "name": "premium-banking-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/admin",
    "apps/api"
  ],
  "scripts": {
    "dev": "npm --prefix apps/web run dev",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "echo 'No tests yet' && exit 0",
    "db:setup": "npm --workspace=premium-banking-api run db:setup",
    "ci": "npm ci && npm run lint && npm run typecheck && npm run build",
    "start:prod": "npm --workspace=apps/api run build && npm --workspace=apps/web run build && (npm --workspace=apps/api run start & npm --workspace=apps/web run start)"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@11.6.2",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/hybeprojects/dashboard",
  "author": "BLCK-DEV",
  "license": "MIT",
  "dependencies": {
    "@nestjs/throttler": "^6.4.0"
  }
}
